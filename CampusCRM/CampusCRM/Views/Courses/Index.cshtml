@model List<CourseModel>
@{
    ViewData["Title"] = "Courses";
}

<table class="table text-center table-striped">
    <thead class="bg-info">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col" class="w-25"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <th scope="col">@course.Title</th>
                <th scope="col">@course.Description</th>
                <th scope="col" class="text-center">
                    <a class="btn btn-success m-1" asp-controller="Courses" asp-action="EditCourse" asp-route-id="@course.Id">
                    Edit</a>
                    <a class="btn btn-danger m-1" asp-controller="Courses" asp-action="DeleteCourse" asp-route-id="@course.Id">
                    Delete</a>
                </th>
            </tr>
        }
    </tbody>
</table>
<div>                   
    <a class="btn btn-primary" asp-controller="Courses" asp-action="EditCourse">Add new course</a>
</div>
                  
        
     
   
    
