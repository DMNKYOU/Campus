@model List<StudentRequestModel>
@{
    ViewData["Title"] = "Student requests";
}

<div class="content">
    <h1 class="content__header">Student requests</h1>
    <table class="table text-center table-striped">
    <thead class="bg-info">
        <tr>
            <th scope="col">Student</th>
            <th scope="col">Course</th>
            <th scope="col">Ready to start date</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
<tr>
    <th scope="col">@request.Student.Name @request.Student.Surname</th>
    <th scope="col">@request.Course.Title</th>
    <th scope="col">@request.StartDate.ToString("dd.MM.yyyy")</th>
    <th scope="col" class="text-center">
        <a class="btn btn-success" asp-controller="StudentRequests" asp-action="EditRequest" asp-route-studentId="@request.StudentId" asp-route-id="@request.Id">
            Edit
        </a>
        <a class="btn btn-danger" asp-controller="StudentRequests" asp-action="DeleteRequest" asp-route-id="@request.Id">
            Delete
        </a>
    </th>
</tr>}
    </tbody>
</table>
</div>