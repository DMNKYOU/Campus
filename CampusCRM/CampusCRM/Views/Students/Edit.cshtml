@model StudentModel
@{
    ViewData["Title"] = "Edit student" + Model.Surname;
}
<div class="row">
    <div class="col-sm-3">Edit @Model.Name @Model.Surname</div>
    <div class="col-sm-6">
        <h2>Edit student</h2>
        @using (Html.BeginForm("Edit", "Students", FormMethod.Post))
        {
            <div class="form-group">
                <label asp-for="Name"></label><br/>
                <input class="form-control" type="text" asp-for="Name" checked/>
                <span class="alert-danger"> @Html.ValidationMessageFor(model => model.Name)</span>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label><br/>
                <input class="form-control" type="text" asp-for="Surname" checked/>
                <span class="alert-danger"> @Html.ValidationMessageFor(model => model.Surname)</span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label><br/>
                <input class="form-control" type="number" asp-for="Age" checked/>
                <span class="alert-danger"> @Html.ValidationMessageFor(model => model.Age)</span>

            </div>
            <button type="submit" class="btn btn-success">Edit</button>
        }
    </div>
    <div class="col-sm-3"></div>
</div>