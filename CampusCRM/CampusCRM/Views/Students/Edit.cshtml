@model StudentModel

@{
    ViewData["Title"] = "Student " + Model.Surname;

}

@using (Html.BeginForm("Edit", "Students", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)

    <div>
        @Html.ValidationSummary()
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" type="text" asp-for="Name" />
        <span class="alert-danger" asp-validation-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input class="form-control" type="text" asp-for="Surname" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input class="form-control" type="date" asp-for="Age" />
        @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" type="text" asp-for="Email" />
        <span class="alert-danger" asp-validation-for="Email" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}
