@model CampusCRM.Models.StudentModel
@{
    ViewData["Title"] = "Add student";
}
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <h2>Add student</h2>
        @using (Html.BeginForm("Create", "Students", FormMethod.Post))
        {
            <div class="form-group">
                <label asp-for="Name"></label><br />
                <input class="form-control" type="text" asp-for="Name" required />
                <span asp-validation-for="Name" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label><br />
                <input class="form-control" type="text" asp-for="Surname" required />
                <span asp-validation-for="Surname" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label><br />
                <input class="form-control" type="number" asp-for="Age" required />
                <span asp-validation-for="Age" class="alert-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Add</button>
        }
    </div>
    <div class="col-sm-3"></div>
</div>